<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="#D0021B"/>
            <solid android:color="#D0021B"/>
            <corners android:radius="10dp"/>
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="#FF425B"/>
            <solid android:color="#FF425B"/>
            <corners android:radius="10dp"/>
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp"/>
        </shape>
    </item>
</selector>